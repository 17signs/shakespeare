<%= form_for @value, remote: true, :html => { :id => 'edit_value' } do |f| %>
    <%= field_set_tag t('.edit')+" "+@value do %>
    <ol>
      <% if @value.reference == nil %>
        <% if @value.poem.children == [] %>
          <li><%= f.label :name %><%= f.text_field :name %></li>
          <li><%= f.label t('.default_value') %><%= f.text_field :value %></li>
          <li><%= f.label :overwrite %><%= f.check_box :overwrite, {checked: true} %></li>
          <li><%= f.label :removable %><%= f.check_box :removable %></li>
          <li><%= f.label :detachable %><%= f.check_box :detachable, {checked: true} %></li>
          <li><%= f.label :value_type %><%= f.select :value_type, Value.value_types %></li>
        <% else %>
          <li><%= f.label :name %><%= f.text_field :name %></li>
          <li><%= f.label t('.default_value') %><%= f.text_field :value %></li>
          <li><%= f.label :overwrite %><%= f.check_box :overwrite, {checked: true} %></li>
          <li><%= f.label :removable %><%= f.check_box :removable %></li>
          <li><%= f.label :detachable %><%= f.check_box :detachable, {checked: true} %></li>
        <% end %>
      <% else %>
        <li><%= f.label :value %><%= f.text_field :value %></li>
      <% end %>
    </ol>
    <ul class="flat_list">
      <li class="action_item"><a href="#" onclick="$('#edit_value').submit(); return false;" class="button focus"><%= t('.update') %></a></li>
      <li class="action_item"><a href='#' onclick='overlay()' class="button"><%= t('.cancel') %></a></li>
    </ul>
  <% end %>
<% end %>