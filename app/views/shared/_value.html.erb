<div id="<%= dom_id(value) %>" class="row-wrapper">
  <div class="row-menu">
    <div class="row-label">
      <%= value.to_s %>
    </div>
    <div class="row-action">
      <ul class="flat_list">
        <li class="action_item"><%= link_to t('.edit'), edit_value_path(value), :remote => true, :class => 'link' %></li>
        <% if value.is_removable? %>
            <li class="action_item"><%= link_to t('.delete'), value, :method => :delete, :remote => true, :class => 'link' %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row-content">
    <% if value.get_value_type == 'reference_poem' && value.reference_poem %>
      <%= link_to value.reference_poem, value.reference_poem, :class => 'link' %>
        <% else %>
    <%= value.value_to_s %>
        <% end %>
  </div>
</div>