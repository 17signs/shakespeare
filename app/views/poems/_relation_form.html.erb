<%= form_for(@relation) do |f| %>
  <%= f.hidden_field :from, :value => @poem.id %>
  <%= f.select :relation_type, @poem.relation_types, :include_blank => true %>
  <%= f.select :to, Poem.poems_for_relations %>
  <%= f.submit 'New relation' %>
<% end %>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(document).ready(function() {
    $('#relation_relation_type').change(
            function() {
                $.ajax({
                    type: "GET",
                    url: "/relation_type_selected",
                    data: {relation_type: $("#relation_relation_type option:selected").val()},
                });
            }
    );
    });
  </script>
<% end %>