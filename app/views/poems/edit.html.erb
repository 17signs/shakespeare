
  <div class="header">
    <div class="header_left">
      <h1><%= t('.edit') %> <%= @poem.type %>: <%= @poem %></h1>
    </div>
    <div class="header_right">
      <ul class="header_menu">
        <li><%= link_to t('.cancel'), @poem, :class => 'link' %></li>
        <li><%= link_to t('.index'), poems_path, :class => 'link' %></li>
        <li><%= link_to t('.delete'), @poem, confirm: 'Are you sure?', method: :delete, :class => 'link' %></li>
      </ul>
    </div>
</div>
<div class="content2">

  <%= field_set_tag t('.properties') do %>
    <%= form_for(@poem) do |f| %>
      <table>
        <tr>
          <td class="label_cell"><%= t('.type') %></td>
          <td class="value_cell"><%= f.select :parent_id, Poem.poem_types, :include_blank => true %></td>
        </tr>
        <tr>
          <td class="label_cell"><%= t('.name') %></td>
          <td class="value_cell"><%= f.text_field :poem_name, :value => @poem.poem_name %></td>
        </tr>
        <tr>
          <td class="label_cell"><%= t('.is_poem_type') %></td>
          <td class="value_cell"><%= f.check_box :is_poem_type %></td>
        </tr>
      </table>
      <%= f.submit t('.update_properties') %>
    <% end %>
  <% end %>

  <%= field_set_tag t('.values') do %>
    <div id="values"><%= render @poem.values %></div>
    <div id="value_form">
      <%= render 'value_form' %>
    </div>
  <% end %>

  <%= field_set_tag t('.referencing') do %>
    <table id="relations">
      <%= render @poem.links_to_successors %>
    </table>
    <div id="relation_form">
      <%= render 'relation_form' %>
    </div>
  <% end %>

  <%= field_set_tag t('.referenced_by') do %>
  <% end %>

</div>
