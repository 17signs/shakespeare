<%= form_for @poem do |f| %>
  <%= field_set_tag t('.new_poem') do %>
    <ol>
      <li><%= f.label t('.type') %><%= f.collection_select :parent_id, Poem.poem_types, :id, :poem_name, :include_blank => true %></li>
      <li><%= f.label :name %><%= f.text_field :poem_name, :placeholder => t('.name_please') %></li>
    </ol>
    <ul class="flat_list">
      <li class="action_item"><a href="#" onclick="document.forms['new_poem'].submit(); return false;" class="button focus"><%= t('.create') %></a></li>
      <li class="action_item"><a href='#' onclick='overlay()' class="link"><%= t('.cancel') %></a></li>
    </ul>
  <% end %>
<% end %>