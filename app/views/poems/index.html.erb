<div class='header'>
  <div class='header_left'>
    <h1>
      <% if params[:search] %>
        <%= t('.search_results_for') %>: <%= params[:search] %>
      <% else %>
        <%= t('.overview') %>
      <% end %>
    </h1>
  </div>
</div>
<section id='new_poem' class='space1'>
  <%= link_to t('.new_poem'), new_poem_path , :remote => true, :class => 'button' %>
</section>
<section class="ac-container">
  <% if @result[:cnt_poem_types] > 0 %>
    <div>
      <input id="ac-1" name="accordion-1" type="checkbox" checked />
      <label for="ac-1"><%= t('.poems_without_parent') %></label>
      <article>
        <ul class="flat_list">
          <% @result[:poem_types].each do |p| %>
              <li class="action_item"><%= link_to p, p, :class => 'link' %></li>
          <% end %>
        </ul>
      </article>
    </div>
  <% end %>
  <% if @result[:cnt_poems] > 0 %>
    <div>
      <input id="ac-2" name="accordion-2" type="checkbox" checked />
      <label for="ac-2"><%= t('.poems_with_parent') %></label>
      <article>
        <ul class="flat_list">
          <% @result[:poems].each do |p| %>
              <li class="action_item"><%= link_to p, p, :class => 'link' %></li>
          <% end %>
        </ul>
      </article>
    </div>
  <% end %>
  <% if @result[:cnt_values] > 0 %>
    <div>
      <input id="ac-3" name="accordion-3" type="checkbox" checked />
      <label for="ac-3"><%= t('.values') %></label>
      <article>
        <table>
          <tr>
            <td class="label_cell"><%= t('.parent') %></td>
            <td class="label_cell"><%= t('.poem') %></td>
            <td class="label_cell"><%= t('.attribute') %></td>
            <td class="label_cell"><%= t('.value') %></td>
          </tr>
          <% @result[:values].each do |v| %>
              <% if v.poem %>
                  <tr class="row_highlight">
                    <% if v.poem.parent == nil %>
                        <td class="value_cell"><%= t('.no_type') %></td>
                    <% else %>
                        <td class="value_cell"><%= link_to v.poem.parent, v.poem.parent, :class => 'link' %></td>
                    <% end %>
                    <td class="value_cell"><%= link_to v.poem, v.poem, :class => 'link' %></td>
                    <td class="value_cell"><%= v.name %></td>
                    <td class="value_cell"><%= v.value %></td>
                  </tr>
              <% end %>
          <% end %>
        </table>
      </article>
    </div>
  <% end %>
</section>